<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.10/dist/full.min.css" rel="stylesheet" type="text/css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" integrity="sha384-4LISF5TTJX/fLmGSxO53rV4miRxdg84mZsxmO8Rx5jGtp/LbrixFETvWa5a6sESd" crossorigin="anonymous">
        <script src="https://cdn.tailwindcss.com"></script>
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="bg-gray-700">
      <header>
        <div class="navbar bg-base-100">
            <div class="flex-1">
            
            {% if app.request.attributes.get('_route') == 'app_home' %}
                <a href="{{ path('app_home') }}" class="btn btn-ghost text-xl text-primary">Home</a>
            {% else %}
                <a href="{{ path('app_home') }}" class="btn btn-ghost text-xl">Home</a>
            {% endif %}

            {% if app.request.attributes.get('_route') == 'app_about' %}
                <a href="{{ path('app_about') }}" class="btn btn-ghost text-xl text-primary">About</a>
            {% else %}
                <a href="{{ path('app_about') }}" class="btn btn-ghost text-xl">About</a>
            {% endif %}

            
            
            {% if app.user %}
                <a href="{{ path('app_logout') }}" class="btn btn-ghost text-xl">Logout</a>

                {% if app.request.attributes.get('_route') == 'app_profile' %}
                    <a href="{{ path('app_profile') }}" class="btn btn-ghost text-xl text-primary">Profile</a>
                {% else %}
                    <a href="{{ path('app_profile') }}" class="btn btn-ghost text-xl">Profile</a>
                {% endif %}
            {% else %}
                
                {% if app.request.attributes.get('_route') == 'app_login' %}
                    <a href="{{ path('app_login') }}" class="btn btn-ghost text-xl text-primary">Login</a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="btn btn-ghost text-xl">Login</a>
                {% endif %}
                
                {% if app.request.attributes.get('_route') == 'app_register' %}
                    <a href="{{ path('app_register') }}" class="btn btn-ghost text-xl text-primary">Register</a>
                {% else %}
                    <a href="{{ path('app_register') }}" class="btn btn-ghost text-xl">Register</a>
                {% endif %}


            
            {% endif %}
            
            {% if app.user %}
                {% if 'ROLE_ADMIN' in app.user.roles %}
                    {% if app.request.attributes.get('_route') == 'app_dashboard' %}
                        <a href="{{ path('app_dashboard') }}" class="btn btn-ghost text-xl text-primary">Dashboard</a>
                    
                    {% else %}
                        <a href="{{ path('app_dashboard') }}" class="btn btn-ghost text-xl">Dashboard</a>
                    {% endif %}

                {% endif %}
            {% endif %}
            </div>
            <div class="flex-none">
                <button class="btn btn-square btn-ghost">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        class="inline-block h-5 w-5 stroke-current">
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z"></path>
                    </svg>
                </button>
            </div>
        </div>
    </header>
        {% block body %}
        {% endblock %}
    </body>
</html>